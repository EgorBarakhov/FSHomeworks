<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Tasklist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.tasklist.title %></td>
        <td><%= link_to 'Show Tasklist', [@tasklist] %></td>
        <td><%= link_to 'Edit Task', edit_tasklist_task_path(@tasklist, task) %></td>
        <td><%= link_to 'Destroy Task', [@tasklist, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_tasklist_task_path(@tasklist) %>
